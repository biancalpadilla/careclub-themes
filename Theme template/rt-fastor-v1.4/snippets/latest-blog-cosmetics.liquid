<div class="box blog-module box-no-advanced{%- if _lblog_mobile == false -%}{{' '}}hidden-xs hidden-sm{%- endif -%}" data-order="{{_lblog_order}}">
  <div class="box-heading">{{_lblog_heading}}</div>
  <div class="strip-line"></div>
  <div class="box-content">
    <div class="cosmetics-news row">
      {%- for _article in _lblog_blog.articles -%}
      {%- if forloop.index > _lblog_limit -%}
      {%- break -%}
      {%- endif -%}
      <div class="col-sm-6 col-xs-12">
        <div class="media clearfix">
          <div class="thumb-holder">
            <a class="thumb" href="{{_article.url}}">
              <img alt="{{_article.title}}" src="{{_article.image.src | img_url: '262x192', crop: 'top'}}" />
            </a>
          </div>
          <div class="media-body">
            {%- if _article.tags.size > 0 -%}
            <div class="tags">
              {%- for tag in _article.tags limit:2 -%}
              <a href="/blogs/{{_lblog_blog.handle}}/tagged/{{tag | handle}}">{{tag}}</a>
              {%- endfor -%}
            </div>
            {%- endif -%}
            <div class="bottom">
              <div class="date-published">{{ _article.published_at | date: "%b %d, %y" }}</div>
              <h5><a href="{{_article.url}}">{{_article.title}}</a></h5>
            </div>
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
  </div>
</div>