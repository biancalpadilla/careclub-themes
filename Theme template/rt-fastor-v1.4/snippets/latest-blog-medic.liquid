<div class="box blog-module box-with-products box-no-advanced{%- if _lblog_mobile == false -%}{{' '}}hidden-xs hidden-sm{%- endif -%}" data-order="{{_lblog_order}}">
  <div class="box-heading">{{_lblog_heading}}</div>
  <div class="clear"></div>
  <div class="box-content">
    <div class="medic-news row">
      {%- for _article in _lblog_blog.articles -%}
      {%- if forloop.index > _lblog_limit -%}
      {%- break -%}
      {%- endif -%}
      <div class="col-sm-6 col-xs-12">
        <div class="media clearfix">
          <div class="thumb-holder">
            <a class="thumb" href="{{_article.url}}">
              <img alt="{{_article.title}}" src="{{_article.image.src | img_url: '262x165', crop: 'top'}}" />
            </a>
          </div>
          <div class="media-body">
            <div class="bottom">
              <div class="date-published">{{ _article.published_at | date: "%b %d, %y" }}</div>
              <h5><a href="{{_article.url}}">{{_article.title}}</a></h5>
            </div>
            <div class="post-description">
              {{_article.excerpt | truncatewords: 15}}
            </div>
            <a href="{{_article.url}}" class="button">{{'blogs.general.read_more' | t}}</a>
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
  </div>
</div>